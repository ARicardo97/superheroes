<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragmentos.DescripcionFragment">

    <ImageView
        android:id="@+id/imvHeroeSelected"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        style="@style/text_small320"
        android:id="@+id/tvNombreHeroeSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imvHeroeSelected"
        android:layout_marginTop="@dimen/padding_10_320"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/colortxt"
        android:textAlignment="center"/>

    <TextView
        style="@style/text_medium320"
        android:id="@+id/tvDescripHeroeSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombreHeroeSelected"
        android:layout_marginTop="@dimen/padding_10_320"
        android:textStyle="bold"
        android:textSize="16sp"
        android:paddingLeft="@dimen/elevacion_4_320"
        android:paddingRight="@dimen/elevacion_4_320"
        android:textAlignment="center"/>


</RelativeLayout>